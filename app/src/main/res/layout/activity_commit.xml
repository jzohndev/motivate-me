<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Added Activities"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/remove_activity_commit_bt" />

    <Button
        android:onClick="activityCommitNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Selected"
        android:id="@+id/remove_activity_commit_bt"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp" />

    <Button
        android:onClick="activityCommitNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commit"
        android:id="@+id/commit_activity_commit_bt"
        android:layout_alignTop="@+id/remove_activity_commit_bt"
        android:layout_toRightOf="@+id/remove_activity_commit_bt"
        android:layout_toEndOf="@+id/remove_activity_commit_bt" />

    <Button
        android:onClick="activityCommitNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Another Activity"
        android:id="@+id/add_another_activity_commit_bt"
        android:layout_below="@+id/remove_activity_commit_bt"
        android:layout_alignRight="@+id/commit_activity_commit_bt"
        android:layout_alignEnd="@+id/commit_activity_commit_bt" />

</RelativeLayout>